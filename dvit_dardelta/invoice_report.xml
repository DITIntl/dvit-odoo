<openerp>
<data>
    <report
        id="report_sessionnn"
        model="account.invoice"
        string="Delta Report"
        name="mothida.report_session_viieww"
        file="mothida.report_sessionnn"
        report_type="qweb-pdf" />

<template id="report_session_viieww">
     <t t-call="report.html_container">
          <t t-set="x" t-value="0" />
          <t t-foreach="docs" t-as="o">
                <t t-set="emp_count" t-value="0"/>
                 <div class="page" dir="ltr">
                    <style type="text/css">
                        .td-y {
                        border: 1px solid #32CD32;
                        text-align: center;
                        font-family:Droid Arabic Naskh,serif;
                        font-size:20px;
                        }
                        .th-x{
                        font-family:Droid Arabic Naskh,serif;
                        <!--background-color: #32CD32 !important;-->
                        border: 1px solid #32CD32;
                        text-align: center;
                        }
                        .strong-x{
                        border:none;
                        text-align: center;
                        }


                    </style>

                     <table>
                         <tbody>
                             <h4 style="text-align: center;">probosal</h4>
                             <h4 style="text-align: center;">for</h4>
                             <h4 style="text-align: center;"><span t-field="o.journal_id" /></h4>
                             <h4 style="text-align: center;">submitted to </h4>
                             <h4 style="text-align: center;"><span t-field="o.partner_id" /></h4>

                             <h4 style="text-align: center;">probosal # :<span t-field="o.name" /></h4>
                             <h4 style="text-align: center;">Date :<span t-field="o.date_invoice" /> </h4>

                             <p style="text-align: center;  color: #FFFFFF;">.</p>
                             <p style="text-align: center;  color: #FFFFFF;">.</p>

                             <img src='/mothida/static/src/img/magdy.jpg' style="width:100%;"/>
                         </tbody>
                    </table>

                     <table>
                         <tbody>
                             <td>
                                <img src='/mothida/static/src/img/55.jpg'/>
                             </td>
                         </tbody>
                    </table>

                    <table>
                         <tbody>
                             <td>
                                <img src='/mothida/static/src/img/77.jpg'/>
                             </td>
                         </tbody>
                    </table>

                     <h1 style="text-align: center;  color: #FFFFFF;">.</h1>
                     <p style="text-align: center;  color: #FFFFFF;">.</p>
                     <p style="text-align: center;  color: #FFFFFF;">.</p>
                     <h1 style="text-align: center;  color: #FFFFFF;">.</h1>
                     <h1 style="text-align: center;  color: #FFFFFF;">.</h1>
                     <h1 style="text-align: center;  color: #FFFFFF;">.</h1>
                     <h1 style="text-align: center;  color: #FFFFFF;">.</h1>
                     <!--<h1 style="text-align: center;  color: #FFFFFF;">.</h1>-->
                     <!--<h1 style="text-align: center;  color: #FFFFFF;">.</h1>-->

                    <table class='table table-bordered ' style="border-color:#32CD32 " width="100%">
                        <thead style="border-color:#32CD32">
                            <th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x">No</th>
                            <th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x">Code</th>
                            <th style="border-color:#32CD32 ;text-align: center;font-size:18px;" class="th-x" width="300" >Describtion</th>
                            <th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x">Qty </th>
                            <th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x"> Unit price</th>
                            <!--<th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x"> Disc%</th>-->
                            <th style="border-color:#32CD32;text-align: center;font-size:18px;" class="th-x">Price</th>
                        </thead>
                        <thead style="border-color:#32CD32">
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>
                            <th style="border-color:#32CD32 ;text-align: center;font-size:18px;" class="th-x" width="300" >professional service</th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>
                            <!--<th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>-->
                            <th style="border-color:#32CD32;text-align: center;" class="th-x"> </th>
                        </thead>
                        <tbody>
                            <t t-foreach="o.invoice_line" t-as="employee_data">
                                <tr>
                                    <t t-set="emp_count" t-value="emp_count+1"/>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-esc="emp_count"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.product_id.default_code"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.quantity"/>
                                        <!--<span t-field="employee_data.product_uom"/>-->
                                    </td>
                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.price_unit"/>
                                    </td>

                                        <!--<td class="td-y" style="border-color:#32CD32;text-align: center;">-->
                                            <!--<t t-foreach="employee_data.tax_id" t-as="t">-->
                                               <!--<span t-field="t.name"/>-->
                                            <!--</t>-->
                                        <!--</td>-->

                                    <td class="td-y" style="border-color:#32CD32;text-align: center;">
                                        <span t-field="employee_data.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div dir="ltr">
                         <h4>Note </h4>
                         <h4><span t-field="o.comment"/> </h4>

                         <h4 style="text-align: center;">signature </h4>
                         <h4 style="text-align: center;"><span t-field="o.create_uid"/> </h4>
                     </div>

                </div>
         </t>
</t>


    <record id="paperformat_Mothida_report" model="report.paperformat">
            <field name="name">Report Elmothida</field>
            <field name="default" eval="True"/>
            <field name="format">A5</field>
            <field name="page_height">20cm</field>
            <field name="page_width">100%</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>



</template>

<template id="report_saleorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale.report_saleorder_document')"/>
        </t>
    </t>
</template>




</data>
</openerp>