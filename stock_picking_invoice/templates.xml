<openerp>
    <data>
        <record id="stock_picking_form_new" model="ir.ui.view">
            <field name="name">stock picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <header>
                    <button name="create_invoice" type="object"  string="Create invoice" 
                      attrs="{'invisible': ['|',('state','&lt;&gt;','done'),('invoice_state','&lt;&gt;','2binvoiced')]}"/>
                </header>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="invoice_state" attrs="{'readonly': [('state','=','done')]}"/>
                    <field name="invoice_id" />
                </xpath>

                <!--<xpath expr="//page[1]" position="inside">-->
                    <!--<field name="invoice_ids" attrs="{'invisible': [('invoice_state','=','none')]}"/>-->
                <!--</xpath>-->

            </field>
        </record>

        <record id="view_res_partner_inherit_search" model="ir.ui.view">
          <field name="name">res partner search</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_res_partner_filter"/>
          <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
              <filter string="customers" name="customers" domain="[('customer', '=', True)]"/>
              <filter string="vendors" name="vendors" domain="[('supplier', '=', True)]"/>
            </xpath>
          </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="acc_inv_new" model="ir.ui.view">
            <field name="name">accountant</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_invoice']" position="after">
                    <field name="picking_id"/>

                </xpath>

            </field>
        </record>

        <record id="acc_invoice_new" model="ir.ui.view">
            <field name="name">accountant view</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_invoice']" position="after">
                    <field name="picking_id"/>

                </xpath>

            </field>
        </record>

    </data>
</openerp>