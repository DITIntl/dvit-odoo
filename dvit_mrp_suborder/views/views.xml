<odoo>
    <data>
        <record id="mrp_subproduction_form" model="ir.ui.view">
        <field name="name">mrp.subproduction.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Related orders">
                    <separator string="Suborders" colspan="4"/>
                    <field colspan="4" name="subproduction_ids"
                        nolabel="1" widget="many2many_list"
                        mode="tree"
                        context="{'subproduction_parent_id': active_id or False}">
                        <tree string="Suborders">
                        <field name="name"/>
                        <field name="date_planned_start"/>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                        <field name="product_uom_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            </field>
        </record>
    </data>
</odoo>
